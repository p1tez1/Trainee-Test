@model DAL.Mode.Employee

@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edite" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label">Date Of Birth</label>
        <input type="datetime" asp-for="DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Married" class="control-label">Married</label>
        <input type="checkbox" asp-for="Married" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="control-label">Salary</label>
        <input type="number" asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label">Возраст</label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>